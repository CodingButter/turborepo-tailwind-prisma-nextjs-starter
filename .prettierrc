{
  "printWidth": 80,
  "useTabs": true,
  "tabWidth": 2,
  "singleQuote": true,
  "jsxSingleQuote": false,
  "semi": true,
  "trailingComma": "all",
  "arrowParens": "always",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "endOfLine": "lf",

  "overrides": [
    {
      "files": ["*.yml", "*.yaml"],
      "options": { "useTabs": false }
    }
  ]
}
